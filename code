        ylab("Cumulative incidence of death from any cause (%) \n")+coord_cartesian(ylim = c(0,1))+scale_x_continuous(expand=c(0,0),limits=c(0,1825),breaks=seq(0,1825,365),labels=c(0, 1, 2, 3, 4, 5))+xlab("\n Time (Years)")+theme_bw()+
